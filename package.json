{
  "name": "eslint-baseline",
  "description": "Run ESLint with a baseline.",
  "version": "0.3.2",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@7.14.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/lukahartwig/eslint-baseline.git"
  },
  "bugs": {
    "url": "https://github.com/lukahartwig/eslint-baseline/issues"
  },
  "license": "MIT",
  "bin": {
    "eslint-baseline": "bin/cli.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "keywords": [
    "baseline",
    "ci",
    "cli",
    "code",
    "continuous integration",
    "eslint",
    "linter",
    "quality"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"**/*.{js,ts,md}\"",
    "lint": "./bin/cli.js .",
    "lint:update-baseline": "./bin/cli.js -u .",
    "release:publish": "pnpm build && changeset publish",
    "release:version": "changeset version && pnpm format",
    "test": "jest"
  },
  "author": "Luka Hartwig",
  "dependencies": {
    "cmd-ts": "^0.11.0",
    "zod": "^3.19.1"
  },
  "peerDependencies": {
    "eslint": "^8.26.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/eslint": "^8.4.9",
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.8",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.2.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
